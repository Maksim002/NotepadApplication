<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="colorAccentPrimary" format="color|reference" />
    <attr name="colorAccentSecondary" format="color|reference" />
    <attr name="colorAccentTertiary" format="color|reference" />
    <attr name="colorAccentQuarternary" format="color|reference" />
    <attr name="colorAccentLink" format="color|reference" />
    <attr name="colorAccentWarning" format="color|reference" />

    <attr name="colorElementPrimary" format="color|reference" />
    <attr name="colorElementSecondary" format="color|reference" />
    <attr name="colorElementTertiary" format="color|reference" />
    <attr name="colorElementQuarternary" format="color|reference" />
    <attr name="colorElementInverse" format="color|reference" />
    <attr name="colorElementStatic" format="color|reference" />
    <attr name="colorBackgroundSecondary" format="color|reference" />

    <item name="amount_watcher_tag_id" type="id" />
    <item name="edgetoedge" type="id" />
    <item name="date_watcher_tag_id" type="id" />
    <item name="cardnum_watcher_tag_id" type="id" />
    <item name="phone_watcher_tag_id" type="id" />
    <item name="camera_watcher_tag_id" type="id" />

    <attr name="text" format="string" />
    <attr name="textAppearance" format="reference" />
    <attr name="titleAppearance" format="reference" />
    <attr name="titlePosition" format="enum">
        <enum name="bottom" value="0" />
        <enum name="top" value="1" />
    </attr>
    <attr name="isDropDown" format="boolean" />

    <declare-styleable name="ProgressButton">
        <attr name="buttonText" format="string" />
        <attr name="buttonTextColor" format="color" />
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="NumberKeyboardButtonView">
        <attr name="keyboard_button_text" format="string" />
        <attr name="keyboard_button_image" format="integer" />
    </declare-styleable>

    <declare-styleable name="NumberKeyboardView">
        <attr name="pressed_button_color" format="color" />
    </declare-styleable>

    <declare-styleable name="WavesView">
        <attr name="waveColor" format="color" />
    </declare-styleable>

    <declare-styleable name="TitledTextView">
        <attr name="title" />
        <attr name="text" />
        <attr name="titlePosition" />
        <attr name="android:gravity" />
        <attr name="textAppearance" />
        <attr name="titleAppearance" />
    </declare-styleable>

    <declare-styleable name="TitledInputView">
        <attr name="text" />
        <attr name="title" />
        <attr name="titlePosition" />
        <attr name="android:gravity" />
        <attr name="textAppearance" />
        <attr name="titleAppearance" />
        <attr name="hint" />
        <attr name="isDropDown" />

        <attr name="android:inputType" />
        <attr name="maxLength" format="integer" min="0" />
    </declare-styleable>

    <declare-styleable name="TitledSeekBar">
        <attr name="hint" format="string" />
        <attr name="extraHint" format="string" />
    </declare-styleable>

    <declare-styleable name="TitledSpinner">
        <attr name="titleHint" format="string" />
        <attr name="textHint" format="string" />
    </declare-styleable>

    <declare-styleable name="PrimaryToolbar">
        <attr name="title" />
        <attr name="android:navigationIcon" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="DashedCircularProgress">
        <attr name="dash_color" format="color" />
        <attr name="progress_color" format="color" />
        <attr name="android:max" />
        <attr name="android:min" />
        <attr name="android:progress" format="float" />
        <attr name="dash_width" format="float" />
        <attr name="dash_height" format="float" />
        <attr name="dash_space_width" format="float" />
    </declare-styleable>

    <declare-styleable name="AvatarImageView">
        <attr name="avatar_shape" format="enum">
            <enum name="circle" value="0" />
            <enum name="rectangle" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CounterFloatingActionButton">
        <attr name="textColor" format="color|reference" />
        <attr name="textBackgroundRes" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="MaskedEditText">
        <attr name="mask" format="string" />
        <attr name="allowed_chars" format="string" />
        <attr name="enable_ime_action" format="boolean" />
        <attr name="denied_chars" format="string" />
        <attr name="char_representation" format="string" />
        <attr name="keep_hint" format="boolean" />
    </declare-styleable>
</resources>